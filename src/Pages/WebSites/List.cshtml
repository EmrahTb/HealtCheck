@page
@model ListModel
@{
    ViewData["Title"] = "DataTable";
}

@section Styles {
    <!-- DataTables -->
    <link rel="stylesheet" href="~/libs/datatables/css/dataTables.bootstrap.min.css">
}

@section Scripts {
    <!-- DataTables -->
    <script src="~/libs/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/libs/datatables/js/dataTables.bootstrap.min.js"></script>

    <!-- page script -->
    <script>
        $(function () {
            $('#example1').DataTable()
            $('#example2').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
    </script>

    <!-- PACE -->
    <script src="~/libs/pace/pace.min.js"></script>

    <!-- page script -->
    <script type="text/javascript">
        // To make Pace works on Ajax calls
        $(document).ajaxStart(function () {
            Pace.restart()
        })
        $('.delete').click(function () {
            $.ajax({ 
                url: '/WebSites/List?id='+ $(this).attr("data-id") +'', success: function (result) {
                    //$('.ajax-content').html('<hr>Ajax Request Completed !')
                    window.location.href = "/WebSites/List?delete=ok";

                }
            })
        })
    </script>

}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Sites
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Sites</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Sites</h3>
                    <a style="float:right;" href="/WebSites/Detail" class="btn bg-olive btn-flat margin">New Record</a>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Site Name</th>
                                <th>Site Url</th>
                                <th>Check how many minutes</th>
                                <th>Status</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Sites)
                            {
                                <tr>
                                    <td>@item.SiteName</td>
                                    <td>
                                        @item.SiteUrl
                                    </td>
                                    <td>@item.Minute</td>
                                    <td>@item.Status</td>
                                    <td>
                                        <a class="btn btn-app" href="/WebSites/Detail?id=@item.Id">
                                            <i class="fa fa-edit"></i> Edit
                                        </a>
                                    </td>
                                    <td>
                                        <a class="btn btn-app delete" data-id="@item.Id">
                                            <i class="fa fa-remove"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->