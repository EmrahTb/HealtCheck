@page
@model DetailModel
@{
    ViewData["Title"] = "General";
}

@section Styles {

}

@section Scripts {

}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Site Edit
        <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/WebSites/List">Sites</a></li>
        <li class="active">@Model.Sites.SiteName</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">@Model.Sites.SiteName</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form" asp-page="./Detail" method="post">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="siteName">Site Name</label>
                            <input type="text" name="SiteName" required id="SiteName" class="form-control" value="@Model.Sites.SiteName" placeholder="Enter Site Name">
                        </div>
                        <div class="form-group">
                            <label for="siteName">Site Url</label>
                            <input type="url" name="SiteUrl" class="form-control" required value="@Model.Sites.SiteUrl" id="SiteUrl" placeholder="Enter Site Url">
                        </div>
                        <div class="form-group">
                            <label for="siteName">
                                Check how many minutes
                            </label>
                            <input type="number" name="Minute" class="form-control" required value="@Model.Sites.Minute" id="Minute" placeholder="Enter Site Minute">
                        </div>
                        <div class="checkbox">
                            <label>
                                @Html.CheckBox("Status", Model.Sites.Status) Is Active
                            </label>
                        </div>
                        <input type="hidden" name="Id" value="@Model.Sites.Id" />
                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <a href="/WebSites/List" class="btn btn-danger btn-lg">Back</a> <button type="submit" class="btn btn-primary btn-lg">Save</button>
                    </div>
                </form>
            </div>
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->